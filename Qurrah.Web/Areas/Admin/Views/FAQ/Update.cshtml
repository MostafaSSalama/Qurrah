@using Localization.Services;
@inject LanguageService _localization
@using Qurrah.Web.Areas.Admin.Models;
@model FAQUpdateViewModel

@{
    ViewData["Title"] = @_localization.GetLocalizedString("FAQ.Update.HeaderTitle");
}

<form method="post" asp-action="Update">
    <div class="container p-3 p-4 mt-4">
        <div class="row pt-4">
            <div class="col-6">
                <h1>
                    @_localization.GetLocalizedString("FAQ.Update.HeaderTitle")
                </h1>
            </div>

            <div class="col-6 @(_localization.CurrentLanguage == SupportedLanguage.Arabic ? "text-start" : "text-end")">
                <a asp-controller="FAQ" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> @_localization.GetLocalizedString("Button.Create.DefaultValue")
                </a>
            </div>
            <hr />
        </div>

        <div class="row pt-4"></div>

        <input hidden asp-for="FAQ.Id" />

        <div class="row mb-3">
            <strong class="mb-2"><label asp-for="FAQ.QuestionAr"></label></strong>
            <input asp-for="FAQ.QuestionAr" class="form-control" />
            <span asp-validation-for="FAQ.QuestionAr" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <strong class="mb-2"><label asp-for="FAQ.AnswerAr"></label></strong>
            <textarea asp-for="FAQ.AnswerAr" class="form-control" rows="5"></textarea>
            <span asp-validation-for="FAQ.AnswerAr" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <strong class="mb-2"><label asp-for="FAQ.QuestionEn"></label></strong>
            <input asp-for="FAQ.QuestionEn" class="form-control" />
            <span asp-validation-for="FAQ.QuestionEn" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <strong class="mb-2"><label asp-for="FAQ.AnswerEn"></label></strong>
            <textarea asp-for="FAQ.AnswerEn" class="form-control" rows="5"></textarea>
            <span asp-validation-for="FAQ.AnswerEn" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <strong class="mb-2"><label asp-for="FAQ.FKTypeId"></label></strong>
            <select asp-for="FAQ.FKTypeId" asp-items="@Model.FAQTypes" class="form-control">
                <option></option>
            </select>
            <span asp-validation-for="FAQ.DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <strong class="mb-2"><label asp-for="FAQ.DisplayOrder"></label></strong>
            <input asp-for="FAQ.DisplayOrder" class="form-control" />
            <span asp-validation-for="FAQ.DisplayOrder" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">
            @_localization.GetLocalizedString("Button.Submit.DefaultValue")
        </button>
        <a class="btn btn-secondary" asp-action="Index" style="width:150px">
            @_localization.GetLocalizedString("Button.Cancel.DefaultValue")
        </a>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}