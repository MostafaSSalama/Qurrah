@using Localization.Services;
@using Microsoft.AspNetCore.Identity
@using Qurrah.Entities;

@inject SignInManager<ApplicationUser> _signInManager
@inject UserManager<ApplicationUser> _userManager
@inject LanguageService _localization


@if (_signInManager.IsSignedIn(User))
{
    <li class="nav-item fw-bold">
        <a id="manage" class="nav-link px-2 text-body" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@_localization.GetLocalizedString("Messages.Welcome") @_userManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item fw-bold">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">@_localization.GetLocalizedString("Identity.Buttons.Logout")</button>
        </form>
    </li>
}
else
{
    <li class="nav-item fw-bold">
        <a class="nav-link px-2 text-body" id="register" asp-area="Identity" asp-page="/Account/Register">@_localization.GetLocalizedString("Identity.Buttons.Register")</a>
    </li>
    <li class="nav-item fw-bold">
        <a class="nav-link px-2 text-body" id="login" asp-area="Identity" asp-page="/Account/Login">@_localization.GetLocalizedString("Identity.Buttons.Login")</a>
    </li>
}
