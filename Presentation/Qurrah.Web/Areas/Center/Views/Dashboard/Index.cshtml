@using Qurrah.Business.Localization;

@inject LanguageService _localization
@{
    ViewData["Title"] = @_localization.GetLocalizedString("Center.Home.Index.HeaderTitle");
}

<div class="container p-3 p-4 mt-4">
    <div class="row pt-4">
        <div class="col-6">
            <h1>
                @ViewData["Title"]
            </h1>
        </div>
        <hr />
    </div>

    <div class="row pt-4"></div>

    <div class="alert alert-dismissible alert-warning">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <h4 class="alert-heading">
            <p class="mb-4">
                <i class="bi bi-exclamation-triangle"></i>
                @_localization.GetLocalizedString("Center.Alerts.NoCentersAdded")
            </p>
        </h4>
        <a class="alert-link px-5" asp-controller="Management" asp-action="Create">@_localization.GetLocalizedString("Center.Buttons.NewCenter")</a>
    </div>
</div>